<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:name=".App"
            android:fullBackupContent="true">
        <activity android:name=".MainActivity"
                  android:configChanges="orientation|screenSize"
                  android:screenOrientation="unspecified"
                  android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="NEWS_DETAIL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity android:name=".normal.FragmentStackActivity"
            android:exported="false"/>
        <activity android:name=".normal.OtherActivity"
            android:exported="false"/>
        <activity android:name=".normal.SingleStackActivity"
            android:exported="false"/>
        <activity android:name=".normal.NormalMainActivity"
            android:exported="false"/>

        <activity android:name=".fragmentmanager.FragmentStackActivity"
            android:exported="false"/>
        <activity android:name=".fragmentmanager.OtherActivity"
            android:exported="false" />
        <activity android:name=".fragmentmanager.SingleStackActivity"
            android:exported="false"/>
        <activity android:name=".fragmentmanager.SupportMainActivity"
            android:exported="false" />
    </application>

</manifest>