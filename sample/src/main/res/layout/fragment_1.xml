<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#3FE91E63">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Page 1"
              android:padding="20dp"
              android:textColor="#000000"
              android:textSize="20sp"/>

    <TextView
            android:id="@+id/other_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Other message"/>

    <Button
        android:id="@+id/jump_other_for_result_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Jump To Other Fragment For Result"/>

    <EditText
        android:id="@+id/page_1_search_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transitionName="trans1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bottom Message"/>
</LinearLayout>